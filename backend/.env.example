# Application Settings
APP_NAME=SmartParlay
APP_ENV=development
DEBUG=true
API_VERSION=v1
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/smartparlay
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Odds Data Providers (Free Tier)
# The Odds API - Free tier: 500 requests/month
ODDS_API_KEY=your-odds-api-key-here
ODDS_API_BASE_URL=https://api.the-odds-api.com/v4

# Alternative Free Odds Sources
# SportsDataIO - Free tier available
SPORTSDATA_API_KEY=your-sportsdata-key-here

# BetFair API - Free for personal use
BETFAIR_APP_KEY=your-betfair-key-here
BETFAIR_CERT_PATH=/path/to/betfair/cert.pem
BETFAIR_KEY_PATH=/path/to/betfair/key.pem

# Weather API (OpenWeatherMap - Free tier: 1000 calls/day)
WEATHER_API_KEY=your-weather-api-key-here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# GeoIP Database Path
GEOIP_DB_PATH=/path/to/GeoLite2-City.mmdb

# JAX Configuration
JAX_ENABLE_X64=true
JAX_PLATFORM_NAME=cpu
# Set to 'gpu' if CUDA available

# Simulation Parameters
DEFAULT_SIMULATION_RUNS=10000
SIMULATION_TIMEOUT_MS=500
DEFAULT_NU_PARAMETER=5.0

# Caching Strategy
ODDS_CACHE_TTL=60
MARGINALS_CACHE_TTL=86400
CORRELATION_MATRIX_CACHE_TTL=604800
GEO_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_FREE_TIER=60
RATE_LIMIT_PRO_TIER=300

# Kafka/Redpanda Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=smartparlay-backend

# Monitoring
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

# Affiliate Configuration
DRAFTKINGS_AFFILIATE_ID=your-draftkings-affiliate-id
FANDUEL_AFFILIATE_ID=your-fanduel-affiliate-id
BETMGM_AFFILIATE_ID=your-betmgm-affiliate-id

# Feature Flags
ENABLE_WEBSOCKET_ODDS=false
ENABLE_STEAM_DETECTION=true
ENABLE_SENTIMENT_ANALYSIS=false
ENABLE_LIVE_BETTING=false

# Security
CORS_ALLOW_CREDENTIALS=true
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
